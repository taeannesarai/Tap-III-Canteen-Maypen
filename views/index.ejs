<%- include('./partials/header') %>
<div class="p-5 text-center bg-image hero-section">
	<div class="d-flex justify-content-center align-items-center h-100 z-10">
		<div class="text-white">
			<h1 class="hero-text">
				<span class="b-text">Fuel</span> Your Day <br />
				with <br />
				<span class="u-text"><span class="b-text">TAP</span> Lunch App!</span>
			</h1>
			<div class="row home-cta">
				<div class="col-6 mx-auto mt-3">
					<a href="/tap-canteen/auth/signup" class="btn btn-primary px-5 signup-link mt-3">Signup</a>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="page-body mt-3">
	<div class="page-heading">Our Star Meals</div>

	<div class="menu-card-container mb-4 justify-content-between">
		<% for( let i=0; i < lastFourMeal.length; i++ ) { %>
		<div class="card" style="width: 24rem">
			<img src="../uploads/<%= lastFourMeal[i].img %>" class="card-img-top" alt="<%= lastFourMeal[i].item_name %>_image" />
			<div class="card-body">
				<h5 class="card-title"><%= lastFourMeal[i].item_name %></h5>
				<p class="card-text"><%= lastFourMeal[i].description %></p>
			</div>
			
			<div class="card-body"></div>
		</div>
		<% } %>
	</div>

	<div class="row">
		<div class="col-2 mx-auto">
			<a href="/tap-canteen/lunch-menu" class="btn btn-secondary px-5">View More</a>
		</div>
	</div>
</div>

<%- include('./partials/footer') %>

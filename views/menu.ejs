<%- include('./partials/header') %>
<section class="page-body">
	<h1 class="page-heading">Menu</h1>
	<div class="menu-card-container mb-4">
		<% for( let i = 0; i < mealData.length; i++ ) { %>
		<div class="card" style="width: 24rem">
			<img src="../uploads/<%= mealData[i].img %>" class="card-img-top img-fluid" alt="<%= mealData[i].item_name %>_image" />
			<div class="card-body">
				<h5 class="card-title"><%= mealData[i].item_name %></h5>
				<p class="card-text"><%= mealData[i].description %></p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">Qty: <%= mealData[i].quantity %></li>
				<!-- <li class="list-group-item">A second item</li>
				<li class="list-group-item">A third item</li> -->
			</ul>
			<div class="card-body">
				<div class="admin-buttons my-2">
					<a href="/tap-canteen/admin/lunch-menu/menu-item-view/<%= mealData[i].id %>" class="btn btn-info">View Item</a>
					<a href="/tap-canteen/admin/update-menu-item/<%= mealData[i].id %>" class="btn btn-warning">Edit Item</a>
					<a href="/tap-canteen/admin/lunch-menu/delete-menu-item/<%= mealData[i].id %>" class="btn btn-danger">Delete Item</a>
				</div>
				<div class="user-buttons my-2">
					<a href="#" class="btn btn-primary">Select Meal</a>
				</div>
			</div>
		</div>
		<% } %>

		<a href="/tap-canteen/admin/create-menu-item" style="width: 24rem" class="new-item card">
			<i class="fi fi-sr-add"></i>
		</a>
	</div>
	
	<h1 class="page-heading">Drinks</h1>
	<div class="menu-card-container">
		<% for( let i = 0; i < drinkData.length; i++ ) { %>
		<div class="card" style="width: 24rem">
			<img src="../uploads/<%= drinkData[i].img %>" class="card-img-top" alt="<%= drinkData[i].item_name %>_image" />
			<div class="card-body">
				<h5 class="card-title"><%= drinkData[i].beverage %></h5>
				<p class="card-text"><%= drinkData[i].description %></p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">Qty: <%= drinkData[i].quantity %></li>
				<!-- <li class="list-group-item">A second item</li>
				<li class="list-group-item">A third item</li> -->
			</ul>
			<div class="card-body">
				<div class="admin-buttons my-2">
					<a href="/tap-canteen/admin/lunch-menu/view-drink-item/<%= drinkData[i].id %>" class="btn btn-info">View Item</a>
					<a href="/tap-canteen/admin/update-drink-item/<%= drinkData[i].id %>" class="btn btn-warning">Edit Item</a>
					<a href="/tap-canteen/admin/lunch-menu/delete-drink-item/<%= drinkData[i].id %>" class="btn btn-danger">Delete Item</a>
				</div>
				<div class="user-buttons my-2">
					<a href="#" class="btn btn-primary">Select Meal</a>
				</div>
			</div>
		</div>
		<% } %>

		<a href="/tap-canteen/admin/create-drink-item" style="width: 24rem" class="new-item card">
			<i class="fi fi-sr-add"></i>
		</a>
	</div>
</section>
<%- include('./partials/footer') %>

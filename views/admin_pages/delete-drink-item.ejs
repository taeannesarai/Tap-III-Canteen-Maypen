<%- include('../partials/header') %>
<section class="page-body">
	<a href="<%= prevUrl %>" class="prev-page">Back</a>
	<h1 class="page-heading">Delete Drink Item</h1>
	<div class="alert alert-warning" role="alert">
		<div class="row">
			<div class="col warning-icon">
				<i class="fi fi-ss-diamond-exclamation"></i>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<p>You are about to delete drink item: <%= drinkItemData.item_name %>! Select Cancel to abort or Delete to continue.</p>
			</div>
		</div>
	</div>

	<div class="card mx-auto" style="width: 40rem">
		<img src="/uploads/<%= drinkItemData.img %>" class="card-img-top" alt="<%= drinkItemData.item_name %>_image" />
		<div class="card-body">
			<h5 class="card-title"><%= drinkItemData.beverage %></h5>
			<p class="card-text"><%= drinkItemData.description %></p>
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">Qty: <%= drinkItemData.quantity %></li>
			<!-- <li class="list-group-item">A second item</li>
				<li class="list-group-item">A third item</li> -->
		</ul>
		<div class="card-body"></div>
	</div>

	<div class="row mt-3">
		<div class="col cancel-delete">
			<a href="<%= prevUrl %>" class="btn btn-secondary mx-3">Cancel</a>
			<a href="/tap-canteen/admin/delete-drink-item/confirm/<%= drinkItemData.id %>" class="btn btn-danger">Delete</a>
		</div>
	</div>
</section>
<%- include('../partials/footer') %>

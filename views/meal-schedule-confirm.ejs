<%- include('./partials/header') %>
<section class="page-body">
	<a href="<%= prevUrl %>" class="prev-page"><span>Back</span></a>

	<h1 class="page-heading">Confirm Meal Selection</h1>

    <p class="alert alert-warning text-center">Meal selection is final and cannot be changed.</p>

	<div class="card mx-auto" style="width: 40rem">
		<img src="/uploads/<%= mealData.img %>" class="card-img-top" alt="<%= mealData.item_name %>_image" />
		<div class="card-body">
			<h5 class="card-title"><%= mealData.item_name %></h5>
			<p class="card-text"><%= mealData.description %></p>
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">Qty: <%= mealData.quantity %></li>
			<!-- <li class="list-group-item">A second item</li>
				<li class="list-group-item">A third item</li> -->
		</ul>
		<div class="card-body">
			<div class="row">
				<div class="col">
					<a href="<%= prevUrl %>" class="btn btn-secondary">Cancel</a>
				</div>
				<div class="col">
					<a href="/tap-canteen/create-menu-schedule/confirm/<%= mealData.id %>" class="btn btn-primary">Select Meal</a>
				</div>
			</div>
		</div>
	</div>
</section>
<%- include('./partials/footer') %>
